        .container
            .game-area
                .quarter.top-left.green.disabled
                    .segment-mask
                .quarter.top-right.red.disabled
                    .segment-mask
                .quarter.bottom-left.yellow.disabled
                    .segment-mask
                .quarter.bottom-right.blue.disabled
                    .segment-mask
            .controls
                .title-wrapper
                    p.name Simon
                .main-controls-wrapper
                    .control-components-wrapper
                        .control-component-wrapper
                            .display.control
                                span.count-text !!!
                        .control-component-wrapper.disabled
                            button.start.control
                        .control-component-wrapper.disabled
                            input.strict.control#strict(type='checkbox')
                            label.strict.label(for='strict')
                    .control-labels-wrapper
                        .control-label-wrapper
                            span.control-label count
                        .control-label-wrapper
                            span.control-label start
                        .control-label-wrapper
                            span.control-label strict
                .main-controls-wrapper
                    .control-components-wrapper
                        .control-component-wrapper
                            input.power.control#power(type='checkbox')
                            label.power.label(for='power')
                    .control-labels-wrapper
                        .control-label-wrapper
                            span.control-label power
        .logo-wrapper
            a(href='', target='_top')
                img.logo(src='images/ortonomy.svg')
        .github-wrapper
            a(href='https://github.com/ortonomy/simon-game', target='_blank')
                img.github(src='images/github.svg')
        .hidden-font hidden
